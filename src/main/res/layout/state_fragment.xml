<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="280dp"
    android:background="#222e35">

    <ImageView
        android:id="@+id/state_fragment_left_semicircle"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:src="@drawable/state_fragment_left_semicircle"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/state_fragment_right_semicircle"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:src="@drawable/state_fragment_right_semicircle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/state_fragment_temperature_logo"
        android:layout_height="95dp"
        android:layout_width="50dp"
        android:src="@drawable/state_fragment__temperature_logo"
        android:layout_alignLeft="@id/state_fragment_left_semicircle"
        android:layout_marginLeft="17dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/state_fragment_humidity_logo"
        android:layout_height="95dp"
        android:layout_width="55dp"
        android:src="@drawable/state_fragment__humidity_logo"
        android:layout_alignRight="@id/state_fragment_right_semicircle"
        android:layout_marginRight="17dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/state_fragment_temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="温度"
        android:textSize="15sp"
        android:layout_alignLeft="@id/state_fragment_temperature_logo"
        android:layout_alignBottom="@id/state_fragment_temperature_logo"
        android:layout_marginLeft="57dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="24"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignLeft="@id/state_fragment_temperature_logo"
        android:layout_alignBottom="@id/state_fragment_temperature_text"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/state_fragment_temperature_icon"
        android:layout_alignLeft="@id/state_fragment_temperature_text"
        />


</RelativeLayout>
