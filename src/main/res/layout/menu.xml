<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

     <!-- <ImageView
            android:id="@+id/left_menu_iconImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_icon_userimagecircle"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/left_menu_iconCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_menu_icon_userimage"
            android:layout_centerInParent="true"
            android:paddingTop="28dp"
            android:paddingLeft="8dp"/>-->

        <bei.itstudio.zzuli.cloud_window.view.CircleImageView
            android:id="@+id/menu_userimageview"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:layout_centerHorizontal="true"
            android:src="@drawable/left_menu_icon_userimage"
            android:layout_marginTop="25dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/menu_equipment_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/menu_button_selector_noline"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_menu_icon_equipmentmanager"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备管理"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_account_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/menu_button_selector_noline">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_menu_icon_account"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户信息"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu_history_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/menu_button_selector_noline">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_menu_icon_history"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史记录"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/left_menu_settingButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/menu_button_selector"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginTop="18dp"/>
        <Button
            android:id="@+id/left_menu_exitButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/menu_button_selector"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/left_menu_settingButton"
            android:layout_marginTop="15dp"
            android:text="退出"
            android:textSize="22sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</LinearLayout>
